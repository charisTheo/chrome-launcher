{
  "name": "chrome-launcher",
  "version": "1.0.0",
  "description": "Chrome Launcher",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package --arch=arm64",
    "make": "electron-forge make --arch=arm64",
    "publish": "electron-forge publish --arch=arm64"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.6.0",
    "@electron-forge/maker-deb": "^7.6.0",
    "@electron-forge/maker-zip": "^7.6.0",
    "@electron-forge/publisher-github": "^7.6.0",
    "electron": "^25.0.0",
    "electron-reloader": "^1.2.3"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "executableName": "chrome_launcher",
        "arch": "arm64"
      },
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "charisTheo",
              "name": "chrome-launcher"
            },
            "prerelease": true
          }
        }
      ],
      "makers": [
        {
          "name": "@electron-forge/maker-zip",
          "executableName": "chrome_launcher",
          "platforms": [
            "darwin"
          ],
          "config": {
            "name": "chrome_launcher",
            "productName": "chrome_launcher"
          }
        },
        {
          "name": "@electron-forge/maker-deb",
          "executableName": "chrome_launcher",
          "config": {
            "name": "chrome_launcher",
            "productName": "chrome_launcher"
          }
        }
      ]
    }
  }
}
